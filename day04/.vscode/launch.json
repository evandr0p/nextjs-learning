    "version": "0.2.0",
    "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Next.js",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "${workspaceFolder}/node_modules/.bin/next",
        "dev"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "openOnSessionStart",
      "restart": true,
      "env": {
        "NODE_OPTIONS": "--inspect"
      }
    }
  ]
}